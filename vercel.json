{
  "functions": {
    "api/**/*.js": {
      "runtime": "nodejs18.x",
      "regions": ["icn1"]
    },
    "api/chat.js": {
      "maxDuration": 30
    },
    "api/random.js": {
      "maxDuration": 10
    },
    "api/naver_map_api.js": {
      "maxDuration": 10
    },
    "api/basic-auth.js": {
      "maxDuration": 10
    },
    "api/user-restaurants.js": {
      "maxDuration": 15
    },
    "api/nearby-restaurants.js": {
      "maxDuration": 10
    }
  },
  "rewrites": [
    {
      "source": "/api/random/:count",
      "destination": "/api/random"
    },
    {
      "source": "/",
      "destination": "/public/index.html"
    }
  ]
}